<%= form_for :restaurant, url: restaurants_path do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :location %><br>
      <%= f.text_area :location %>
    </p>

    <p>
      <%= f.label :email %><br>
      <%= f.text_area :email %>
    </p>

    <p>
      <%= f.label :telephone %><br>
      <%= f.text_area :telephone %>
    </p>

    <p>
      <%= f.label :service_hours %><br>
      <%= f.text_area :service_hours %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>
